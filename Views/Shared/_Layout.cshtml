@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Каталог рецептов</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Наши стили -->
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>

    <header>
        <div class="container d-flex justify-content-between align-items-center">
            <a class="navbar-brand text-white" href="/">Домашние рецепты</a>
            <nav class="navbar">
                <a class="nav-link text-white" href="/">Главная</a>
                <a class="nav-link text-white" href="/Recipes">Рецепты</a>

                <a class="nav-link text-white" href="/Home/About">О нас</a>
                <a class="nav-link text-white" href="/Home/Contact">Контакты</a>
            </nav>
        </div>
    </header>


    <main role="main" class="container mt-4">
        @RenderBody()
    </main>

    <footer>
        <p>© 2025 Каталог домашних рецептов | Сделано на ASP.NET Core</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
