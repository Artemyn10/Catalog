@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Каталог рецептов</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Наши стили -->
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>

<body class="d-flex flex-column min-vh-100">


    <header>
        <div class="container d-flex justify-content-between align-items-center">
            <a class="navbar-brand text-white" href="/">Домашние рецепты</a>

            <nav class="navigation d-flex align-items-center w-100">

                <!-- Центрированное меню -->
                <div class="menu-center mx-auto d-flex gap-3">
                    <a class="nav-link text-white" href="/">Главная</a>
                    <a class="nav-link text-white" href="/Home/Recipes">Рецепты</a>
                    <a class="nav-link text-white" href="/Home/Services">Услуги</a>
                    <a class="nav-link text-white" href="/Home/About">О нас</a>
                    <a class="nav-link text-white" href="/Home/Contacts">Контакты</a>
                </div>

                <!-- Кнопки справа -->
                <div class="menu-right d-flex gap-2">
                    <a class="btn btn-light btn-sm" href="/Account/Login">Войти</a>
                    <a class="btn btn-outline-light btn-sm" href="/Account/Register">Регистрация</a>
                </div>

            </nav>

        </div>
    </header>

    <main role="main" class="container mt-4">
        @RenderBody()
    </main>

    <footer class="footer mt-5">
        <div class="container py-4 d-flex flex-column flex-md-row justify-content-between align-items-center">

            <!-- Левая часть -->
            <div class="footer-about mb-3 mb-md-0 text-white">
                <h5>Каталог домашних рецептов</h5>
                <p>
                    Лучшие домашние блюда, проверенные рецепты, полезные советы и вкусные идеи для каждого дня.
                </p>
            </div>

            <!-- Правая навигация -->
            <nav class="footer-nav d-flex align-items-center gap-4">
                <a href="/" class="footer-link">Главная</a>
                <a href="/Recipes" class="footer-link">Рецепты</a>
                <a href="/Home/Services" class="footer-link">Услуги</a>
                <a href="/Home/About" class="footer-link">О нас</a>
                <a href="/Home/Contacts" class="footer-link">Контакты</a>

                <!-- Вот эти две строки замени -->
                <div class="menu-right d-flex gap-2">
                    <a class="btn btn-light btn-sm" href="/Account/Login">Войти</a>
                    <a class="btn btn-outline-light btn-sm" href="/Account/Register">Регистрация</a>
                </div>
            </nav>

        </div>

        <div class="footer-bottom text-center py-2 text-white">
            &copy; @DateTime.Now.Year Каталог домашних рецептов | Сделано на ASP.Net Core MVC Бондарев Артем
        </div>
    </footer>




    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
